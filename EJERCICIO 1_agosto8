## EJERCICIO 1  ##
# crear tres variables de 5 entradas , las variables de nombre:
# facultad(economia,ingenieria,arquitectura y derecho)
# licenciaturas(actuaria, ingeieria civil, arquitectura y derecho)
# calificacion de alumnos (6,4,10,8)

facultad <- c("economia","ingenieria","arquitectura","derecho")
licenciatura <- c("actuaria","ingenieria civil","arquitectura","derecho")
calificacionalumnos <- c(6,4,10,8)

# verificar con R que tipo de variables son : numero o caracter

class(facultad)
class(licenciatura)
class(calificacionalumnos)

#  borrar las variables  facultad y licenciatura

rm(facultad)
rm(licenciatura)

# graficar en pie la variable calificacion e incorporar los argumentos utilizados en clase

etiq <- c(6,4,10,8)
pie(calificacionalumnos)
pie(calificacionalumnos,etiq,main="GRÁFICA DE PIE DE LA CALIFICACIÓN DE ALUMNOS",sub="Realizado por: Daniela",col=c("red","blue","pink","grey"),radius=1.5,lty=0)
